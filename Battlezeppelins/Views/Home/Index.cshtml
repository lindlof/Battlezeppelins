@model Battlezeppelins.Models.Data
@{
    var userExists = Model.player != null;
    var userName = userExists ? Model.player.name : "<You don't exist>";
    ViewBag.Title = "Battle Area";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title</h1>
            </hgroup>
            @if (userExists) {
            <p>
                 Username @userName
            </p>
            }
        </div>
    </section>
}
<div class="round">
    @if (!userExists)
    {
        <h5>Getting Started</h5><br />
        <p>You need to register in order to join the games.</p>
        <p style="color:#E52E2E">@ViewBag.Error</p>
        <form action="Home" method="post">
            Name: <input type="text" name="registrationName" />
            <input type="submit" value="Register" />
        </form>
    } else {
        <p>Hello @userName</p>
    }

    @Html.Partial("UserList")
</div>
